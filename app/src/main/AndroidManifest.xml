<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tickitbookit">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TickitBookit"
        tools:targetApi="31">
        <activity
            android:name=".activity.TravellerDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.TickitBookit_Light" />
        <activity
            android:name=".activity.AddTravellerActivity"
            android:exported="false"
            android:theme="@style/Theme.TickitBookit_Light" />
        <activity
            android:name=".activity.CompleteBookingActivity"
            android:exported="false"
            android:theme="@style/Theme.TickitBookit_Light" />
        <activity
            android:name=".activity.CardDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.TickitBookit_Light" />
        <activity
            android:name=".activity.AddNewCardActivity"
            android:exported="false"
            android:theme="@style/Theme.TickitBookit_Light" />
        <activity
            android:name=".activity.SearchFlightActivity"
            android:exported="false"
            android:theme="@style/Theme.TickitBookit_Light" />
        <activity
            android:name=".activity.ActivityDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.TickitBookit_Light" />
        <activity
            android:name=".activity.ForgotPasswrodActivity"
            android:exported="false"
            android:theme="@style/Theme.TickitBookit_Light" />
        <activity
            android:name=".activity.GalleryActivity"
            android:exported="false"
            android:theme="@style/Theme.TickitBookit_Light" />
        <activity
            android:name=".activity.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.TickitBookit_Light" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.TickitBookit_Light" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TickitBookit_Light" />
    </application>

</manifest>